{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-vop-core",
      "type": "shell",
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder:vop-core}/ui"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "copy-frontend",
      "type": "shell",
      "command": "copy-frontend.bat",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/c"
          ]
        },
        "cwd": "${workspaceFolder:vop-pico}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-front&cp&build-maui",
      "dependsOn": [
        "build-vop-core",
        "copy-frontend",
        "maui: Build"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
